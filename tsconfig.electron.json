{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./build/main",
    "baseUrl": "./src"
  },
  "include": [
    "src/main/**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
