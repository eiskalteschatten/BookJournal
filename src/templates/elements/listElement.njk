{% set data = '' %}

{% for field, value in dataFields %}
    {% set data = data + 'data-' + field + '="' + value + '"' %}
{% endfor %}

<li data-id="{{ id }}" class="{{ classes }}"{{ data | safe }}>
    {% if type != 'title' and type != 'category' %}
        <div class="list-element-icon">
            <img src="{{ iconPath }}">
        </div>
    {% endif %}

    {% if type == 'category' %}
        <div class="list-element-color-wrapper">
            <div class="list-element-color js-list-element-color" style="background-color: {{ color }};"></div>

            {% if color == 'transparent' %}
                <input type="color" class="hidden js-list-element-color-form">
            {% else %}
                <input type="color" value="{{ color }}" class="hidden js-list-element-color-form">
            {% endif %}

        </div>
    {% endif %}

    <span class="list-element-name js-list-element-name">{{ displayName }}</span>

    {% if type == 'category' %}
        <div class="js-list-element-edit list-element-edit-inline hidden">
            <input type="text" class="list-element-edit-name js-list-element-edit-rename" value="{{ displayName }}">
        </div>
    {% endif %}
</li>
