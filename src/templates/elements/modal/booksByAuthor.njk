{% extends "elements/modal.njk" %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <h2 class="modal-title">Books by {{ authors }}</h2>
        </div>

        <div id="booksByAuthorBookListAnchor">
            {{ bookList | safe }}
        </div>

        <div class="row show-more-results {% if showMoreResults == false %}hidden{% endif %}">
            <div class="col-md-12 align-center">
                <a href="#" id="booksByAuthorShowMoreResults" data-total="{{ totalItems }}" data-items-left="{{ itemsLeft }}">Show more results</a>
            </div>
        </div>
    </div>

{% endblock %}
