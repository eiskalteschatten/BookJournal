<div class="book-utility-menu" id="bookUtilityMenu"></div>

<h1>Book Details</h1>

<form class="book-form" id="bookForm">

    <input type="hidden" id="bookBookcoverId">

    <div class="group">
        <div class="row">
            <div class="col-md-4">
                <div class="bookcover-upload-area" id="bookcoverUploadArea">
                    <div class="instructions">Click here or drag and drop an image<br>to set the bookcover</div>
                    <div class="bookcover" id="bookcoverImage"></div>
                </div>

                <input type="hidden" id="bookBookcoverFileName" class="js-book-form-field">
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label for="bookTitle">Title</label>
                    <input type="text" class="form-control js-book-form-field full-width" id="bookTitle">
                </div>
                <div class="form-group">
                    <label for="bookAuthor">Author</label>
                    <input type="text" class="form-control js-book-form-field full-width" id="bookAuthor">
                </div>
                <div class="form-group">
                    <label for="bookGenre">Genre</label>
                    <input type="text" class="form-control js-book-form-field full-width" id="bookGenre">
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="bookDateRead">Date Read</label>
                            <input type="date" class="form-control js-book-form-field full-width" id="bookDateRead">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group not-read-yet">
                            <label for="bookNotReadYet">
                                <input type="checkbox" id="bookNotReadYet" class="js-book-form-field">Not read yet
                            </label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="bookNumberOfPages">Page Count</label>
                            <input type="number" class="form-control js-book-form-field full-width" id="bookNumberOfPages">
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label for="bookColor">Color</label>
                            <input type="color" id="bookColor" class="hidden js-book-form-color-form js-book-form-field">
                            <div class="color-stripe js-book-form-color-stripe"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="group">
        <div class="group-title">Publication Details</div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="bookPublisher">Publisher</label>
                    <input type="text" class="form-control js-book-form-field full-width" id="bookPublisher">
                </div>
                <div class="form-group">
                    <label for="bookYearPublished">Year Published</label>
                    <input type="number" class="form-control js-book-form-field full-width" id="bookYearPublished">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="bookIsbn">ISBN</label>
                    <input type="text" class="form-control js-book-form-field full-width" id="bookIsbn">
                </div>
            </div>
        </div>
    </div>

    <div class="group">
        <div class="group-title">Language &amp; Origin</div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="bookNationality">Nationality</label>
                    <input type="text" class="form-control js-book-form-field full-width" id="bookNationality">
                </div>
                <div class="form-group">
                    <label for="bookOriginalLanguage">Original Language</label>
                    <input type="text" class="form-control js-book-form-field full-width" id="bookOriginalLanguage">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="bookLanguageReadIn">Language Read In</label>
                    <input type="text" class="form-control js-book-form-field full-width" id="bookLanguageReadIn">
                </div>
                <div class="form-group">
                    <label for="bookTranslator">Translator</label>
                    <input type="text" class="form-control js-book-form-field full-width" id="bookTranslator">
                </div>
            </div>
        </div>
    </div>

    <div class="group">
        <div class="group-title">Classification</div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="bookTags">Tags</label>
                    {% include "src/templates/bookForm/tags.njk" %}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="bookCategories">Categories</label>
                    <div id="bookCategoriesWrapper">
                        {% include "src/templates/bookForm/categories.njk" %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="group">
        <div class="group-title">Comments &amp; Review</div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label for="bookRatingStars">Rating</label>
                    <div id="ratingStarsAnchor"></div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="bookSummary">Summary</label>
            <textarea class="form-control js-book-form-field full-width book-textarea" id="bookSummary"></textarea>
        </div>
        <div class="form-group">
            <label for="bookCommentary">Commentary</label>
            <textarea class="form-control js-book-form-field full-width book-textarea" id="bookCommentary"></textarea>
        </div>
    </div>
</form>
