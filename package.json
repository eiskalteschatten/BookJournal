{
    "name": "bookjournal",
    "version": "1.0.0",
    "description": "A digital book journal.",
    "main": "./src/main.js",
    "scripts": {
        "build": "node ./build-scripts/build.js",
        "prestart": "npm run build",
        "start": "NODE_ENV=development electron .",
        "prestart:prod": "npm run build",
        "start:prod": "electron .",
        "test": "npm run lint",
        "lint": "npx eslint .",
        "postinstall": "electron-builder install-app-deps",
        "prepack": "npm run build",
        "pack": "electron-builder --dir",
        "pack:skipsigning": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run pack",
        "predist": "npm run build",
        "dist": "electron-builder",
        "dist:skipsigning": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run dist"
    },
    "build": {
        "productName": "BookJournal",
        "copyright": "Copyright Â© 2018 - 2019 Alex Seifert",
        "appId": "com.alexseifert.bookjournal",
        "buildDependenciesFromSource": true,
        "files": [
            "!*.code-workspace",
            "!build-scripts",
            "!glyph-iconset-master",
            "!images",
            "!Notes.md"
        ],
        "mac": {
            "target": [
                "dmg"
            ],
            "category": "public.app-category.productivity",
            "entitlements": "build/entitlements.mac.plist",
            "type": "development",
            "darkModeSupport": true
        },
        "linux": {
            "target": [
                "deb",
                "tar.gz"
            ],
            "category": "Office"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "build/icon.ico"
        }
    },
    "repository": "https://github.com/eiskalteschatten/BookJournal.git",
    "keywords": [],
    "author": {
        "name": "Alex Seifert",
        "email": "alex@alexseifert.com"
    },
    "homepage": "https://www.alexseifert.com",
    "license": "",
    "devDependencies": {
        "compile-sass": "^1.1.1",
        "electron": "^11.2.1",
        "electron-builder": "^22.9.1",
        "eslint": "^7.18.0",
        "eslint-plugin-promise": "^4.2.1",
        "husky": "^4.3.8",
        "node-cache": "^5.1.2"
    },
    "dependencies": {
        "bootstrap": "^4.6.0",
        "chart.js": "^2.9.4",
        "colorthief": "^2.3.2",
        "iso-639-1": "^2.1.7",
        "jquery": "^3.5.0",
        "mkdirp": "^1.0.4",
        "moment": "^2.29.1",
        "nunjucks": "^3.2.2",
        "popper.js": "^1.16.1",
        "sequelize": "^6.4.0",
        "sequelize-migration-wrapper": "^1.0.0",
        "sqlite3": "^5.0.1",
        "tiny-date-picker": "^3.2.8"
    },
    "husky": {
        "hooks": {
            "pre-push": "npm run lint"
        }
    }
}
