{
    "name": "bookjournal",
    "version": "0.5.0",
    "description": "A digital book journal.",
    "main": "./src/main.js",
    "scripts": {
        "build": "node ./build-scripts/build.js",
        "prestart": "npm run build",
        "start": "NODE_ENV=development electron .",
        "prestart:prod": "npm run build",
        "start:prod": "electron .",
        "test": "npm run lint",
        "lint": "./node_modules/.bin/eslint .",
        "postinstall": "install-app-deps",
        "prepack": "npm run build",
        "pack": "electron-builder --dir",
        "predist": "npm run build",
        "dist": "electron-builder"
    },
    "build": {
        "productName": "BookJournal",
        "copyright": "Copyright Â© 2018 Alex Seifert",
        "appId": "com.alexseifert.bookjournal",
        "buildDependenciesFromSource": true,
        "files": [
            "!*.code-workspace",
            "!build-scripts",
            "!glyph-iconset-master",
            "!images",
            "!Notes.md"
        ],
        "mac": {
            "target": [
                "dmg",
                "pkg"
            ],
            "category": "public.app-category.productivity",
            "entitlements": "build/entitlements.mac.plist",
            "type": "development"
        },
        "linux": {
            "target": [
                "snap",
                "deb",
                "tar.gz",
                "AppImage"
            ],
            "category": "Office"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "build/icon.ico"
        }
    },
    "repository": "gogs@git.alexseifert.de:alexseifert/BookJournalElectron.git",
    "keywords": [],
    "author": {
        "name": "Alex Seifert",
        "email": "alex@alexseifert.com"
    },
    "homepage": "https://www.alexseifert.com",
    "license": "",
    "devDependencies": {
        "compile-sass": "0.0.5",
        "electron": "^3.0.5",
        "electron-builder": "^20.28.4",
        "eslint": "^4.19.1",
        "eslint-plugin-promise": "^3.8.0",
        "husky": "^1.1.2"
    },
    "dependencies": {
        "bootstrap": "^4.1.1",
        "chart.js": "^2.7.3",
        "html-pdf": "^2.2.0",
        "iso-639-1": "^2.0.3",
        "jquery": "^3.3.1",
        "mkdirp": "^0.5.1",
        "moment": "^2.22.2",
        "nunjucks": "^3.1.3",
        "popper.js": "^1.14.4",
        "sequelize": "^4.40.0",
        "sqlite3": "^4.0.2",
        "tiny-date-picker": "^3.2.6",
        "umzug": "^2.1.0",
        "uuid": "^3.3.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test"
        }
    }
}
