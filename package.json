{
  "name": "bookjournal",
  "version": "2.0.0",
  "description": "A digital book journal.",
  "main": "./public/electron.js",
  "scripts": {
    "build:react": "react-scripts build",
    "build:electron": "tsc --project tsconfig.electron.json",
    "build": "npm run build:react && npm run build:electron",
    "prestart": "npm run build:electron",
    "start": "concurrently \"BROWSER=none npm run start:react\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "start:react": "react-scripts start",
    "test": "npm run lint",
    "lint": "eslint './**/*.{tsx,ts,js}'",
    "postinstall": "electron-builder install-app-deps",
    "prepack": "npm run build",
    "pack": "electron-builder --dir",
    "pack:skipsigning": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run pack",
    "predist": "npm run build",
    "dist": "electron-builder",
    "dist:skipsigning": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run dist",
    "eject": "react-scripts eject"
  },
  "build": {
    "productName": "BookJournal",
    "copyright": "Copyright Â© 2018 - 2020 Alex Seifert",
    "appId": "com.alexseifert.bookjournal",
    "buildDependenciesFromSource": true,
    "files": [
      "build"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.productivity",
      "entitlements": "build-files/entitlements.mac.plist",
      "type": "development",
      "darkModeSupport": true
    },
    "linux": {
      "target": [
        "deb",
        "tar.gz"
      ],
      "category": "Office"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build-files/icon.ico"
    }
  },
  "repository": "https://github.com/eiskalteschatten/BookJournal.git",
  "keywords": [],
  "author": {
    "name": "Alex Seifert",
    "email": "alex@alexseifert.com"
  },
  "homepage": "./",
  "license": "",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.8.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/user-event": "^10.3.3",
    "@types/jest": "^25.2.3",
    "@types/node": "^12.12.6",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "concurrently": "^5.2.0",
    "electron": "^9.0.0",
    "electron-builder": "^22.6.1",
    "eslint": "^6.6.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^1.3.1",
    "node-sass": "^4.14.1",
    "typescript": "^3.9.3",
    "wait-on": "^5.0.0"
  },
  "dependencies": {
    "chart.js": "^2.9.3",
    "colorthief": "^2.3.0",
    "iso-639-1": "^2.1.3",
    "mkdirp": "^0.5.5",
    "moment": "^2.26.0",
    "react": "^16.13.1",
    "react-bootstrap": "^1.0.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "sequelize": "^5.21.10",
    "sequelize-migration-wrapper": "^0.1.1",
    "sqlite3": "^4.2.0",
    "uuid": "^3.4.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  }
}
